<h2 class="text-center mb-4">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-edit-profile" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field -->
  <div class="form-floating mb-3">
    <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
    <%= f.label :email, for: "floatingEmail" do %>
      <i class="bi bi-envelope-fill me-2"></i>Email address
    <% end %>
  </div>

  <!-- Unconfirmed Email Notice -->
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-warning mb-3">
      Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
    </div>
  <% end %>

  <!-- Password Field -->
  <div class="form-floating mb-3">
    <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Leave blank if you don't want to change it", autocomplete: "new-password" %>
    <%= f.label :password, for: "floatingPassword" do %>
      <i class="bi bi-lock-fill me-2"></i>New Password
      <% if @minimum_password_length %>
        <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
    <% end %>
  </div>

  <!-- Password Confirmation Field -->
  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirmation", placeholder: "Confirm new password", autocomplete: "new-password" %>
    <%= f.label :password_confirmation, for: "floatingPasswordConfirmation" do %>
      <i class="bi bi-lock-fill me-2"></i>Confirm New Password
    <% end %>
  </div>

  <!-- Current Password Field -->
  <div class="form-floating mb-3">
    <%= f.password_field :current_password, class: "form-control", id: "floatingCurrentPassword", placeholder: "Current password", autocomplete: "current-password" %>
    <%= f.label :current_password, for: "floatingCurrentPassword" do %>
      <i class="bi bi-lock-fill me-2"></i>Current Password
      <small class="text-muted">(we need your current password to confirm your changes)</small>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="d-grid gap-2">
    <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<hr class="my-4">

<h3 class="text-center mb-4">Cancel my account</h3>

<div class="text-center">
  <p class="mb-3">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-lg" %></p>
  <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
</div>