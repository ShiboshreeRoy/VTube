<h2 class="text-center mb-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <div class="form-floating mb-3">
    <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
    <%= f.label :email, for: "floatingInput" do %>
      <i class="bi bi-envelope-fill me-2"></i>Email address
    <% end %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
    <%= f.label :password, for: "floatingPassword" do %>
      <i class="bi bi-lock-fill me-2"></i>Password
    <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
      <%= f.label :remember_me, class: "form-check-label", for: "rememberMe" do %>
        <i class="bi bi-check2-square me-2"></i>Remember me
      <% end %>
    </div>
  <% end %>

  <div class="d-grid gap-2">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<hr class="my-4">

<%= render "devise/shared/links" %>