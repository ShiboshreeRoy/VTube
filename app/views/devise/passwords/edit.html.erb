<h2 class="text-center mb-4">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-change-password" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <!-- New Password Field -->
  <div class="form-floating mb-3">
    <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "New password", autofocus: true, autocomplete: "new-password" %>
    <%= f.label :password, for: "floatingPassword" do %>
      <i class="bi bi-lock-fill me-2"></i>New Password
      <% if @minimum_password_length %>
        <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
    <% end %>
  </div>

  <!-- Confirm New Password Field -->
  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirmation", placeholder: "Confirm new password", autocomplete: "new-password" %>
    <%= f.label :password_confirmation, for: "floatingPasswordConfirmation" do %>
      <i class="bi bi-lock-fill me-2"></i>Confirm New Password
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="d-grid gap-2">
    <%= f.submit "Change my password", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<hr class="my-4">

