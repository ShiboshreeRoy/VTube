<h2 class="text-center mb-4">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-forgot-password" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field -->
  <div class="form-floating mb-3">
    <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
    <%= f.label :email, for: "floatingEmail" do %>
      <i class="bi bi-envelope-fill me-2"></i>Email address
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="d-grid gap-2">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<hr class="my-4">

